datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  addrs     Addr[]
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Addr {
  addrDetail   String
  createdAt    DateTime @default(now())
  district     String
  fullname     String
  id           String   @id @default(cuid())
  tel          String
  updatedAt    DateTime @updatedAt
  userId       User     @relation(fields: [fk_user_addr], references: [id])
  fk_user_addr String
}
